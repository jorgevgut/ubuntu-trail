;; This buffer is for notes you don't want to save, and for Lisp evaluation.
;; If you want to create a file, visit that file with C-x C-f,
;; then enter the text in that file's own buffer.

(add-to-list 'load-path "~/.emacs.d/vendor/tango-tango")

(add-to-list 'auto-mode-alist '("\\.coffee$" . coffee-mode))
(add-to-list 'auto-mode-alist '("Cakefile" . coffee-mode))

(require 'tangotango-theme)

;; set font
(set-frame-font "UbuntuMono-10") ; set font for all windows



(custom-set-variables
 '(ansi-color-names-vector ["#242424" "#e5786d" "#95e454" "#cae682" "#8ac6f2" "#333366" "#ccaa8f" "#f6f3e8"])
 '(custom-enabled-themes (quote (tangotango-theme)))
 '(inhibit-startup-screen t)
 '(show-paren-mode t)
 )


(let ((buffer (url-retrieve-synchronously
               "http://tromey.com/elpa/package-install.el")))
  (save-excursion
    (set-buffer buffer)
    (goto-char (point-min))
    (re-search-forward "^$" nil 'move)
    (eval-region (point) (point-max))
    (kill-buffer (current-buffer))
    )
  )


'(show-paren-mode t)
'(setq indent-tabs-mode nil)
'(require 'tool-bar)
'(menu-bat-mode -1) 




(require 'ido)
(ido-mode t)


(define-key global-map (kbd "C-+") 'text-scale-increase)
(define-key global-map (kbd "C--") 'text-scale-decrease)

(global-set-key (kbd "C-s") 'isearch-forward-regexp)
(global-set-key (kbd "\C-r") 'isearch-backward-regexp)


(set-default 'indicate-empty-lines t)

(defalias 'qrr 'query-replace-regexp)

(defalias 'comr 'comment-region)
(defalias 'ucomr 'uncomment-region)

;; tips 

(tooltip-mode -1)
(setq tooltip-use-echo-area t)
(global-linum-mode 1)


(require 'iso-transl)

(put 'upcase-region 'disabled nil)
(setq make-backup-files nil) 

(setq-default tab-width 4)

(setq-default tab-stop-list '(4 8 12 16 20 24 28 32 36 40 44 48 52 56 60 64 68 72 76 80))


